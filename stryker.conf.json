{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",

  "coverageAnalysis": "perTest",
  "inPlace": false,
  "mutate": [
    "src/**/*.js"
  ],
  "commandRunner": {
    "command": "npm run test -- --runInBand"
  },

  "timeoutMS": 25000,

  "reporters": [
    "clear-text",
    "html",
    "progress"
  ],
  "htmlReporter": {
    "baseDir": "_reports/mutation"
  },

  "tempDirName": ".temp/stryker",
  "cleanTempDir": false
}
