{
  "name": "git-tag-annotation-action",
  "version": "2.0.4",
  "private": true,
  "description": "Github Action for obtaining the annotation of a git tag",
  "homepage": "https://github.com/ericcornelissen/git-tag-annotation-action#readme",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericcornelissen/git-tag-annotation-action.git"
  },
  "bugs": {
    "url": "https://github.com/ericcornelissen/git-tag-annotation-action/issues"
  },
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com",
    "url": "https://ericcornelissen.dev/"
  },
  "keywords": [
    "git",
    "tag",
    "annotation",
    "git-actions",
    "actions"
  ],
  "dependencies": {
    "@actions/core": "1.10.0",
    "shescape": "1.6.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "23.0.1",
    "@rollup/plugin-node-resolve": "15.0.0",
    "@rollup/plugin-terser": "0.1.0",
    "@stryker-mutator/core": "6.3.0",
    "c8": "7.12.0",
    "depcheck": "1.4.3",
    "fast-check": "3.3.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "licensee": "10.0.0",
    "markdownlint-cli": "0.32.2",
    "prettier": "2.8.0",
    "rollup": "3.5.0",
    "sinon": "14.0.2",
    "unimported": "1.23.0",
    "uvu": "0.5.6"
  },
  "scripts": {
    "prepare": "is-ci || husky install script/hooks",
    "_prettier": "prettier ./**/*.{js,json,md,yml} !lib/* --ignore-path .gitignore",
    "audit": "npm audit",
    "audit:prod": "npm audit --omit dev",
    "build": "rollup --config rollup.config.js",
    "clean": "git clean --force -X .cache/ .temp/ _reports/ && git checkout HEAD ./lib",
    "coverage": "c8 --reports-dir=_reports/coverage --reporter=lcov --reporter=text npm test",
    "format": "npm run _prettier -- --write",
    "license-check": "licensee --errors-only",
    "lint": "npm run _prettier -- --check",
    "lint:docker": "docker run -i --rm --mount \"type=bind,source=$(pwd)/.hadolint.yml,target=/.config/hadolint.yaml\" hadolint/hadolint@sha256:d355bd7df747a0f124f3b5e7b21e9dafd0cb19732a276f901f0fdee243ec1f3b < ./.devcontainer/Dockerfile",
    "lint:md": "markdownlint --dot --ignore-path .gitignore .",
    "lint:sh": "shellcheck -e SC1090,SC1091,SC2155 script/hooks/*.sh script/hooks/pre-*",
    "test": "uvu test",
    "test:e2e": "act --job test-e2e",
    "test:mutation": "stryker run stryker.config.js",
    "vet": "depcheck && unimported"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.1.2"
  }
}
