{
  "name": "git-tag-annotation-action",
  "version": "2.0.5",
  "private": true,
  "description": "Github Action for obtaining the annotation of a git tag",
  "homepage": "https://github.com/ericcornelissen/git-tag-annotation-action#readme",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericcornelissen/git-tag-annotation-action.git"
  },
  "bugs": {
    "url": "https://github.com/ericcornelissen/git-tag-annotation-action/issues"
  },
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com",
    "url": "https://ericcornelissen.dev/"
  },
  "keywords": [
    "git",
    "tag",
    "annotation",
    "git-actions",
    "actions"
  ],
  "devDependencies": {
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "markdownlint-cli": "0.32.2"
  },
  "scripts": {
    "prepare": "is-ci || husky install script/hooks",
    "lint:ci": "actionlint",
    "lint:docker": "docker run -i --rm --mount \"type=bind,source=$(pwd)/.hadolint.yml,target=/.config/hadolint.yaml\" hadolint/hadolint@sha256:d355bd7df747a0f124f3b5e7b21e9dafd0cb19732a276f901f0fdee243ec1f3b < ./.devcontainer/Dockerfile",
    "lint:md": "markdownlint --dot --ignore-path .gitignore .",
    "lint:sh": "shellcheck -e SC1090,SC1091,SC2155 script/hooks/*.sh script/hooks/pre-* src/*.sh",
    "test:e2e": "act --job test-e2e"
  },
  "engines": {
    "npm": ">=8.1.2"
  }
}
