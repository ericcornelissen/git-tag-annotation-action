# Check out EditorConfig at: https://editorconfig.org

root=true

[*]
charset=utf-8
insert_final_newline=true
max_line_length=80
trim_trailing_whitespace=true

[*.{js,cjs,mjs}]
indent_size=2
indent_style=space

[*.md]
indent_size=unset
indent_style=space

[*.{sh,bats}]
indent_size=2
indent_style=space

[*.yml]
indent_size=2
indent_style=space
max_line_length=unset

[LICENSE]
indent_size=unset
indent_style=space

[Makefile]
indent_style=tab
